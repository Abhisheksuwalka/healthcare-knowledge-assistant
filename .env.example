# ===== GEMINI API CONFIGURATION (PRIMARY) =====
# Get your API key from https://aistudio.google.com/app/apikey
# Free tier available; Pro version unlocks higher rate limits
GEMINI_API_KEY=your-gemini-api-key-here

# ===== GROQ SETTINGS (FAST INFERENCE) =====
# Get your API key from https://console.groq.com/keys
# Great for low-latency responses with LLaMA 3.3
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# ===== OPENAI CONFIGURATION (OPTIONAL FALLBACK) =====
# Uncomment if needed as backup
# OPENAI_API_KEY=your-openai-api-key-here

# ===== APPLICATION SETTINGS =====
DEBUG_MODE=True

# ===== VECTOR DATABASE SETTINGS =====
CHROMA_PERSIST_DIRECTORY=./vectordb/chroma_db
CHROMA_COLLECTION_NAME=healthcare_docs

# ===== DOCUMENT PROCESSING =====
DOCUMENTS_PATH=./data/sample_docs
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===== RAG SETTINGS =====
RETRIEVAL_TOP_K=5
LLM_TEMPERATURE=0.0
LLM_MAX_OUTPUT_TOKENS=1000